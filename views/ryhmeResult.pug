
div
    //- for the mobile screen
    .simple 
        if result
            each r in result
                span=r['word']
    //- for desktop screen
    table.table
        thead
            tr(style="font-weight: 700")
                each h in ['詞彙', '子音', '拼音', '聲調','韻母', '韻母歸類','押韻度']
                    td=h 

        tbody
            if word
                tr(style="font-weight: 550").bg-light
                    each value in word
                        td=value
            if result
                each r in result
                    tr
                        each value, key in ['word', 'consonant', "pinyin", 'tone', 'vowel','vowelType']
                            td=r[value]

                        td
                            .progress
                                .progress-bar.progress-bar-striped(role="progressbar" aria-valuenow=r.score*100 aria-valuemin="0" aria-valuemax='100'  style=`width:${r.score*100}%`)
                else
                    h3 No Result
            